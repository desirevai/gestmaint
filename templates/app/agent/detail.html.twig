{% extends 'base.html.twig' %}

{% block title %}Detail de l'agent
	{{datas}}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title mb-4 text-uppercase">
						{{ datas }}</h3>
					<div class="fluid-container"></div>
				</div>
			</div>
		</div>
		<div class="col-5 grid-margin">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-4 text-uppercase">Detail de l'agent</h5>
					<div class="forms-sample">
						<div class="form-group row">
							<label class="col-sm-5 col-form-label">Nom</label>
							<div class="col-sm-7">
								<p class="card-text text-justify">{{ datas.nom }}</p>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-5 col-form-label">Prenoms</label>
							<div class="col-sm-7">
								<p class="card-text text-justify">{{ datas.prenoms }}</p>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-5 col-form-label">Contact</label>
							<div class="col-sm-7">
								<p class="card-text text-justify">{{ datas.contacts }}</p>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-5 col-form-label">Email Perso.</label>
							<div class="col-sm-7">
								<p class="card-text text-justify">{{ datas.emailPerso }}</p>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-5 col-form-label">Email Pro.</label>
							<div class="col-sm-7">
								<p class="card-text text-justify">{{ datas.emailPro }}</p>
							</div>
						</div>
                        <hr>
						<div class="form-group row">
							<label class="col-sm-5 col-form-label">Service / Direction</label>
							<div class="col-sm-7">
								<p class="card-text text-justify">{{ datas.service }} / {{datas.service.direction}}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-7 grid-margin">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-4 text-uppercase">Informations supplementaires</h5>
					<div class="row">
						<div class="col-md-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<h4 class="card-title">Liste des ordinateurs</h4>
									<ul class="bullet-line-list">
										{% for item in datas.ordinateurs|reverse|slice(0, 6) %}
											<li>
												<h6>
													<a href="{{ path('app_ordinateur_detail', {'id': item.id}) }}">{{ item }}</a>
                                                    <ul class="bullet-line-list mt-2">
                                                        {% for intervention in item.interventions|reverse|slice(0, 2) %}
                                                            <li>
                                                                <h6>
                                                                    <a href="{{ path('app_intervention_detail', {'id': intervention.id}) }}">{{ intervention }}</a>
                                                                </h6>
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
												</h6>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
