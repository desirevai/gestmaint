{% extends 'base.html.twig' %}

{% block title %}Detail du peripherique
	{{datas}}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title mb-4 text-uppercase">
						{{ datas }}</h3>
					<div class="fluid-container"></div>
				</div>
			</div>
		</div>
		<div class="col-4 grid-margin">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-4 text-uppercase">Detail du peripherique</h5>
					<div class="forms-sample">
						<div class="form-group row">
							<label class="col-sm-4 col-form-label">Libéllé</label>
							<div class="col-sm-8">
								<p class="card-text text-justify">{{ datas.libelle }}</p>
							</div>
						</div>
						{# <div class="form-group row">
							<label class="col-sm-4 col-form-label">Direction</label>
							<div class="col-sm-8">
								<p class="card-text text-justify">{{ datas.direction }}</p>
							</div>
						</div> #}
					</div>
				</div>
			</div>
		</div>
		<div class="col-8 grid-margin">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-4 text-uppercase">Informations supplementaires</h5>
					<div class="row">
						<div class="col-md-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<h4 class="card-title">Liste des agents</h4>
									<ul class="bullet-line-list">
										{% for item in datas.agents|reverse|slice(0, 6) %}
											<li>
												<h6>
													<a href="{{ path('app_agent_detail', {'id': item.id}) }}">{{ item }}</a>
												</h6>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
