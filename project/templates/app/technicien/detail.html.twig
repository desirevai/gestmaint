{% extends 'base.html.twig' %}

{% block title %}Detail du technicien
	{{datas}}
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12 grid-margin">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title mb-4 text-uppercase">
						{{ datas }}</h3>
					<div class="fluid-container"></div>
				</div>
			</div>
		</div>
		<div class="col-4 grid-margin">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-4 text-uppercase">Detail du technicien</h5>
					<div class="forms-sample">
						<div class="form-group row">
							<label class="col-sm-4 col-form-label">Nom</label>
							<div class="col-sm-8">
								<p class="card-text text-justify">{{ datas.nom }}</p>
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-4 col-form-label">Prenoms</label>
							<div class="col-sm-8">
								<p class="card-text text-justify">{{ datas.prenoms }}</p>
							</div>
						</div>
						<hr>
						<div class="form-group row">
							<label class="col-sm-4 col-form-label">Contact</label>
							<div class="col-sm-8">
								<p class="card-text text-justify">{{ datas.contact }}
								</p>
							</div>
						</div>
						<hr>
						<div class="form-group row">
							<label class="col-sm-4 col-form-label">Email</label>
							<div class="col-sm-8">
								<p class="card-text text-justify">
									{{ datas.email }}
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-8 grid-margin">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title mb-4 text-uppercase">Informations supplementaires</h5>
					<div class="row">
						<div class="col-md-12 grid-margin stretch-card">
							<div class="card">
								<div class="card-body">
									<h4 class="card-title">Interventions</h4>
									<ul class="bullet-line-list">
										{% for item in datas.interventions|reverse|slice(0, 5) %}
											<li>
												<h6>
													<a href="{{ path('app_intervention_detail', {'id': item.id}) }}">{{ item }}</a>
												</h6>
												<p>
													{% for panne in item.pannes %}
														<a href="{{ path('app_panne_detail', {'id': panne.id}) }}" class="text-{{ random(['success', 'warning', 'info', 'danger']) }}">{{ panne }}</a>
														-
													{% endfor %}
												</p>
											</li>
										{% endfor %}
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
