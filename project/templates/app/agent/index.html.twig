{% extends 'base.html.twig' %}

{% block title %}Hello DirecteurController!{% endblock %}

{% block body %}

<div class="row">
    <div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
        <h5 class="card-title mb-4">Liste des agents du ministere</h5>
        <div class="fluid-container">
            {% if datas is defined %}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Nom de l'agent </th>
                                <th> Contact </th>
                                <th> Emal Pro </th>
                                <th> Actions </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in datas %}
                            <tr>
                                <td> #{{item.id}} </td>
                                <td> {{item.nom}} </td>
                                <td> 
                                    {% if item.contacts is null %}
                                        -- neant --
                                    {% else %}
                                       00225 {{item.contacts}}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if item.emailPro is null %}
                                        -- neant --
                                    {% else %}
                                       {{item.emailPro}}
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{path('app_agent_detail', {'id': item.id})}}" class="btn btn-primary">+</a> | <a href="#" class="btn btn-danger">-</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
            {% else %}
                <div class="alert alert-primary my-auto">
                    <p class="text-uppercase">Base de donnée <strong>vide</strong> ou donnée(s) <strong>non reçue</strong> !</p>
                </div>
            {% endif %}
        </div>
        </div>
    </div>
    </div>
</div>
{% endblock %}
